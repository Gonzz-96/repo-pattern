<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".view.main.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/singlePokemon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Single Pokemon"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/rangePokemon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Range Of Pokemons"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/clearDb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear DB"
            android:layout_gravity="center"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/showDb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Pokemons In DB"
            android:layout_gravity="center"
            android:layout_margin="10dp" />
    </LinearLayout>

</LinearLayout>