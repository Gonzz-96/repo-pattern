<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/singlePokemon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Single Pokemon"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/singlePokemonInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:hint="Number"
            android:inputType="numberDecimal"
            android:maxLength="10" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/rangePokemon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Range Of Pokemon"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:layout_margin="10dp" />

        <EditText
            android:id="@+id/rangePokemonFirstInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="Init"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:layout_margin="10dp" />

        <EditText
            android:id="@+id/rangePokemonSecondInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="10"
            android:hint="End"
            android:inputType="numberDecimal"
            android:layout_weight="3"
            android:layout_margin="10dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/clearDb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear DB"
            android:layout_gravity="center"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/showDb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Pokemons In DB"
            android:layout_gravity="center"
            android:layout_margin="10dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/clearCache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear Cache"
            android:layout_gravity="center"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/showCache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Pokemons Cache"
            android:layout_gravity="center"
            android:layout_margin="10dp" />
    </LinearLayout>
</LinearLayout>